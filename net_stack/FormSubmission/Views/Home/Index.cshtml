<h2>Enter your information</h2>
<div class="jumbotron">
    @model FormSubmission.Models.User
    <form autocomplete="off" asp-action="Submit" asp-controller="Home" method="post">
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name">
            </div>
            <div class="form-group col-md-5">
                <label asp-for="LastName">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Age">Age</label>
                <input type="number" class="form-control" asp-for="Age" placeholder="Age">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
<div>
    <h2>Errors</h2>
    <span asp-validation-for="FirstName"></span>
    <span asp-validation-for="LastName"></span>
    <span asp-validation-for="Age"></span>
    <span asp-validation-for="Email"></span>
    <span asp-validation-for="Password"></span>
</div>