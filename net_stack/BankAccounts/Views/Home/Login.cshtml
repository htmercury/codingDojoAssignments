<div class='content'>
    <div class='jumbotron'>
        <form asp-action='Process' asp-controller='Home' method="POST" autocomplete="off">
            <h4>Sign in</h4>
            <p class='error'>@ViewBag.LoginError</p>
            <div class="form-group">
                <label for="email" value="@ViewBag.loginEmail">Email address</label>
                <input type="text" class="form-control" name="email" id="email_address" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-secondary">Login</button>
        </form>
    </div>
    <div class='link-container'>
        <a href='/'>Need to Register?</a>
    </div>
</div>