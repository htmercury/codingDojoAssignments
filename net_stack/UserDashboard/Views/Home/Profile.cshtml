<div class='container page'>
    <div class='options'>
        <h4>Edit Profile</h4>
        <div class='fill'></div>
        <a href='/Dashboard' role='button' class='btn btn-primary'>Return to Dashboard</a>
    </div>
</div>
<div class='content container'>
    <div class='jumbotron'>
        @model UpdateProfileViewModel
        <form asp-action='UpdateProfile' asp-route-id=@ViewBag.User.UserId asp-controller='Home' method="POST"
            autocomplete=off>
            <div class="form-group">
                <h4>Edit Information</h4>
                <p class='error'>@ViewBag.Email</p>
                <label asp-for="EditForm.Email">Email:</label>
                <input type='text' asp-for='EditForm.Email' placeholder="Enter email" class="form-control" value="@ViewBag.emailAddress">
                <p class='error'>@ViewBag.FirstName</p>
                <label asp-for="EditForm.FirstName">First Name:</label>
                <input type='text' asp-for='EditForm.FirstName' placeholder="Enter first name" class="form-control"
                    value="@ViewBag.fname">
                <p class='error'>@ViewBag.LastName</p>
                <label asp-for="EditForm.LastName">Last Name:</label>
                <input type='text' asp-for='EditForm.LastName' placeholder="Enter last name" class="form-control" value="@ViewBag.lname">
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class='jumbotron'>
        <form asp-action='ChangeProfilePass' asp-controller='Home' method="POST" autocomplete=off>
            <h4>Change Password</h4>
            <p class='error'>@ViewBag.Password</p>
            <label asp-for="ChangeForm.Password">Password:</label>
            <input type="password" class="form-control" asp-for="ChangeForm.Password" placeholder="Password">
            <label asp-for="ChangeForm.ConfirmPassword">Confirm password:</label>
            <input type="password" class="form-control" asp-for="ChangeForm.ConfirmPassword" placeholder="Password">
            <button type="submit" class="btn btn-primary">Update Password</button>
        </form>
    </div>
</div>
<div class='container'>
    <div class='jumbotron'>
        <form asp-action='ChangeDesc' asp-controller='Home' method="POST" autocomplete=off>
            <div class='form-group'>
                <h4>Edit Description</h4>
                <label asp-for="DescForm.Description">Description:</label>
                <textarea class="form-control" asp-for="DescForm.Description" rows="3" id="description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
<script>
    let desc = "@ViewBag.User.Description";
    let descBox = document.getElementById("description");
    descBox.innerHTML = desc;
</script>