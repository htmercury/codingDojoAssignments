<div class='content'>
    <div class='jumbotron'>
        @model UserModel
        <form asp-action='Register' asp-controller='Home' method="POST" autocomplete=off>
            <h4>Register</h4>
            <p class='error'>@ViewBag.FirstName</p>
            <label asp-for="FirstName">First Name:</label>
            <input type='text' asp-for='FirstName' placeholder="Enter first name" class="form-control" value="@ViewBag.fname"> 
            <p class='error'>@ViewBag.LastName</p>
            <label asp-for="LastName">Last Name:</label>
            <input type='text' asp-for='LastName' placeholder="Enter last name" class="form-control" value="@ViewBag.lname">
            <p class='error'>@ViewBag.Email</p>
            <label asp-for="Email">Email:</label>
            <input type='text' asp-for='Email' placeholder="Enter email" class="form-control" value="@ViewBag.emailAddress">
            <div class="form-group">
                <p class='error'>@ViewBag.Password</p>
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                <label asp-for="ConfirmPassword">Confirm password</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class='jumbotron'>
        <form asp-action='Login' asp-controller='Home' method="POST" autocomplete="off">
            <h4>Sign in</h4>
            <p class='error'>@ViewBag.LoginError</p>
            <div class="form-group">
                <label for="email" value="@ViewBag.loginEmail">Email address</label>
                <input type="text" class="form-control" name="email" id="email_address" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-secondary">Login</button>
        </form>
    </div>
</div>